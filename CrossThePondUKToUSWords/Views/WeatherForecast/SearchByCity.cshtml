@model CrossThePondUKToUSWords.Models.SearchByCity

@{
    ViewData["Title"] = "SearchByCity";
}

<style>
    .container {
        max-width: 600px;
        text-align: center;
    }
    h1 {
        padding-top: 100px;
        padding-bottom: 100px;
    }
    button {
        margin: 30px;
    }

</style>


<div class="container">
    <form method="post">
        <div class="container">
            <h1>Search By City Name</h1>
            <div>
                <input asp-for="CityName" class="form-control" placeholder="Enter city name..." />
                <button asp-controller="WeatherForecast" asp-action="SearchByCity" class="btn btn-outline-primary">
                    Search
                </button>
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>