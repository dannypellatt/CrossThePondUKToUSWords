@model CrossThePondUKToUSWords.Models.City

@{
    ViewData["Title"] = "CityUS";
}

<style>

    @*START top-bar SECTION*@
    .top-bar {
        margin-top: 30px;
        margin-bottom: 30px;
        min-height: 170px;
    }
    .nav-list {
        display: inline-flex;
        text-align: center;
    }
    .nav-link img {
        display: inline;
        max-height: 130px;
        text-align: center;
    }
    .swapper img {
        max-height: 130px;

    }
    .swapper {
        font-size: 60px;
        padding-left: 230px;
    }

    .hover-img {
        background-color: #fff;
        color: #000;
        display: inline-block;
        overflow: hidden;
        position: relative;
        text-align: center;
        width: 100%;
    }

        .hover-img * {
            box-sizing: border-box;
            transition: all 0.45s ease;
        }

        .hover-img:before,
        .hover-img:after {
            background-color: #fff;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            content: '';
            transition: all 0.3s ease;
            z-index: 1;
            opacity: 0;
            transform: scaleY(2);
        }

        .hover-img img {
            vertical-align: top;
            max-width: 100%;
            backface-visibility: hidden;
        }

        .hover-img figcaption {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            align-items: center;
            z-index: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            line-height: 1.1em;
            opacity: 0;
            z-index: 2;
            transition-delay: 0.1s;
            font-size: 24px;
            font-family: sans-serif;
            font-weight: 400;
            letter-spacing: 1px;
            text-transform: uppercase;
            color: #000;
        }

        .hover-img:hover:before,
        .hover-img:hover:after {
            transform: scale(1);
            opacity: 1;
        }

        .hover-img:hover > img {
            opacity: 0.7;
        }

        .hover-img:hover figcaption {
            opacity: 1;
        }
        .nav-swapper {
        position: relative;
        display: inline-block;

    }

        .nav-swapper .img-swapper {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 99;
        }

        .nav-swapper:hover .img-swapper {
            display: inline;
        }
        @*END top-bar SECTION*@
        @*START heading SECTION*@

        h1 {
        font-size: 40px;
        text-align: center;
    }

    @*END heading SECTION*@

    @*START main SECTION*@
    .temp-main {
        display: inline-flex;
        text-align: center;
    }
    .temp-main-element {
        border: solid 1px #BEBEBE;
        padding: 20px;
        margin-bottom: 30px;
    }
    .temp-main-left {
        text-align: left;
        min-width: 500px;
    }
    .temp-main-left h1 {
        text-align: center;
    }
    .temp-main-right {
        min-width: 35%;
        padding: 20px;
        margin-left: 30px;
    }
    .temp-main-element h3 {
        text-align: left;
    }
    .temp-main-heading {
        margin-bottom: 30px;
    }
    .notes {
        font-style: italic;
    }
    p {
        font-size: larger;
    }
    .temp-main-heading, .calculator {
        border: solid 2px #BEBEBE;
    }
    .temp-main-element img {
        max-width: 400px;
        padding-left: 20px;
        padding-top: 50px;
        padding-bottom: 44px;
    }

    .regions {
        display: inline-grid;
        grid-template-columns: auto auto;
        text-align: left;
    }
    .now-facts {
        margin-left: 100px;
    }

    @*END main SECTION*@

</style>

<section class="top-bar">
    <ul class="nav-list">
        <li class="nav-element nav-link words hover-img">
            <a class="nav-icon" asp-area="" asp-controller="wordsUK" asp-action="IndexA">
                <img src="/Images/CtPchatIcon.png" />
                <figcaption>
                    <h4>Words</h4>
                </figcaption>
            </a>
        </li>
        <li class="nav-element nav-link weather hover-img">
            <a class="nav-icon" asp-area="" asp-controller="WeatherForecast" asp-action="SearchByCityUS">
                <img src="/Images/CtPweatherIcon.png" />
                <figcaption>
                    <h4>Weather</h4>
                </figcaption>
            </a>
        </li>
        <li class="nav-element nav-link temperature hover-img">
            <a class="nav-icon" asp-area="" asp-controller="Temp" asp-action="IndexUS">
                <img src="/Images/CtPtemperatureIcon.png" />
                <figcaption>
                    <h4>Temp.</h4>
                </figcaption>

            </a>
        </li>
        <li class="nav-element nav-link tipping hover-img">
            <a class="nav-icon" asp-area="" asp-controller="Tipping" asp-action="IndexUS">
                <img src="/Images/CtPtipsIcon.png" />
                <figcaption>
                    <h4>Tipping</h4>
                </figcaption>
            </a>
        </li>
        <li class="nav-element nav-link swapper">
            <a class="nav-swapper" asp-area="" asp-controller="WeatherForecast" asp-action="SearchByCity">
                <img src="/Images/UKtoUSA-labelled.png" />
                <img src="/Images/USAtoUK-swap-hover.png" class="img-swapper" />
            </a>
        </li>
    </ul>
</section>




<section class="temp-main">
    <div class="temp-main-left">
        <div class="temp-main-element temp-main-heading">
            <h1>
                Weather in the United States
            </h1>
        </div>
        <div class="temp-main-element regions explained">
            <div>
                <h3>Explained:</h3>
                <br />
                <p>
                    &emsp;&emsp;The United States of America (or USA), is commonly known as the United States (or US) or America.
                </p>
                <p>
                    &emsp;&emsp;It consists of 50 states, 48 next to one another, 1 next to Canada and 1 in the middle of the Pacific Ocean, a federal district, five major unincorporated territories, nine minor outlying islands,
                    and 326 Indian reservations with limited sovereignty.
                </p>
                <br />

            </div>
            <div>
                <img src="/Images/map-of-us.jpeg" />
                <p>
                    &emsp;&emsp;With all that going on, you need a weather app.
                </p>
            </div>
        </div>

    </div>





    <div class="temp-main-element temp-main-right calculator">
        <h3>Forecast:</h3>
        <br />
        <form method="post">
            <div class="container">
                <h1>Search By City</h1>
                <br />
                <label asp-for="Name"></label>
                <span class="badge alert-primary">@Model.Name</span>
                <br />
                <br />
                <br />
                <label asp-for="Temperature"></label>
                <span class="badge alert-primary">@Model.Temperature°C</span>
                <br />
                <br />
                <label asp-for="Humidity"></label>
                <span class="badge alert-primary">@Model.Humidity%</span>
                <br />
                <br />
                <label asp-for="Weather"></label>
                <span class="badge alert-primary">@Model.Weather</span>
                <br />
                <br />
                <form method="get">
                    <button asp-controller="WeatherForecast" asp-action="SearchByCityUS" class="btn btn-primary">Go back</button>
                </form>
            </div>
        </form>
    </div>

</section>


