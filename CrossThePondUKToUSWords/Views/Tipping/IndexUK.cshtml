<style>

    .grid-container {
        display: inline-grid;
        grid-template-columns: auto auto auto;
    }

    .left {
        text-align: center;
    }

    .calc {
        text-align: center;
        padding-left: 100px;
        padding-right: 100px;
    }

    .right {
        text-align: right;
    }

    h1 {
        text-align: center;
        padding-top: 100px;
        padding-bottom: 100px;
    }

    .result {
        display: inline-flex;
        margin-left: 5px;
        margin-right: 5px;
    }

    .resultBox {
    }

    .notes {
        padding-top: 50px;
        font-style: italic;
    }

    input {
        text-align: center;
    }

    .italic {
        font-style: italic;
    }
