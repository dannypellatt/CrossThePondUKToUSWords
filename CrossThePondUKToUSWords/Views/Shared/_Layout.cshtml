<!DOCTYPE html>
<style>
    #portfolio-links-start, #app-links-start {
        padding-left: 70px;
    }
    .container-fluid {
        background-color: rgb(249,249,249)
    }
    .nav-item {
        padding-right: 30px;        
    }
    .navbar-brand img {
        max-width: 30px;
    }

</style>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CrossThePondApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CrossThePondApp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/Images/earth-globe.png"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <p>Danny Pellatt - Portfolio Item - Cross The Pond</p>
                        </li>
                        <li class="nav-item nav-portfolio-link" id="portfolio-links-start">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Portfolio Website</a>
                        </li>
                        <li class="nav-item nav-portfolio-link">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Github</a>
                        </li>
                        <li class="nav-item nav-portfolio-link">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Resume</a>
                        </li>
                        <li class="nav-item nav-app-link" id="app-links-start">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">App Home</a>
                        </li>
                        <li class="nav-item nav-app-link">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">App Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CrossThePondApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

