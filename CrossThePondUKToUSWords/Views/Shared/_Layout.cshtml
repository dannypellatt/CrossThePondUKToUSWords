<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cross The Pond</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CrossThePondUKToUSWords.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1 menu-left">
                        <li class="nav-title">
                            <p>UK TO USA: </p>
                        </li>
                        <li class="nav-item allButton words">
                            <a class="nav-link text-dark" asp-area="" asp-controller="wordsUK" asp-action="Index">Words</a>
                        </li>
                        <li class="nav-item allButton weather">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Temp" asp-action="Index">(Weather)</a>
                        </li>
                        <li class="nav-item allButton currency">
                            <a class="nav-link text-dark" asp-area="" asp-controller="currency" asp-action="Index">(Currency)</a>
                        </li>
                        <li class="nav-item allButton tipping">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tipping" asp-action="Index">Tipping</a>
                        </li>
                        <li class="nav-item allButton measurements">
                            <a class="nav-link text-dark" asp-area="" asp-controller="measurements" asp-action="Index">(Measurements)</a>
                        </li>
                        <li><p>_____</p></li>
                    </ul>

                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Cross The Pond</a>

                    <ul class="navbar-nav flex-grow-1 menu-right">
                        <li><p>_____</p></li>
                        <li class="nav-item allButton measurements">
                            <a class="nav-link text-dark" asp-area="" asp-controller="measurements" asp-action="Index">(Measurements)</a>
                        </li>
                        <li class="nav-item allButton tipping">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tipping" asp-action="Index">Tipping</a>
                        </li>
                        <li class="nav-item allButton currency">
                            <a class="nav-link text-dark" asp-area="" asp-controller="currency" asp-action="Index">(Currency)</a>
                        </li>
                        <li class="nav-item allButton weather">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Temp" asp-action="Index">(Weather)</a>
                        </li>
                        <li class="nav-item allButton words">
                            <a class="nav-link text-dark" asp-area="" asp-controller="wordsUSA" asp-action="Index">Words</a>
                        </li>
                        <li class="nav-title">
                            <p>:USA TO UK</p>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CrossThePondUKToUSWords - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

