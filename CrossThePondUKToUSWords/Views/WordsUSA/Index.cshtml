@model IEnumerable<wordsUK>

<style>

    @*START top-bar SECTION*@

    .top-bar {
        min-height: 170px;
    }

    .nav-list {
        display: inline-flex;
        text-align: center;
    }

    .nav-link img {
        display: inline;
        max-height: 120px;
        text-align: center;
    }

    .nav-icon img:hover {
        max-height: 135px;
    }

    .swapper img {
        max-height: 150px;
        padding-left: 200px;

    }

    .swapper img:hover {
        max-height: 160px;
        padding-left: 200px;
    }

    @*END top-bar SECTION*@

    @*START heading SECTION*@

    .heading {
        text-align: center;
        padding-top: 100px;
        padding-bottom: 50px;
    }

    @*END heading SECTION*@

    @*START main SECTION*@

    .forecast {
        border: solid black 1px;
    }

    .climate-facts img {
        max-width: 500px;
    }

    .climate-facts {
        display: inline-grid;
        grid-template-columns: auto auto;
        text-align: left;
    }

    @*END main SECTION*@

</style>

