@model List<wordsUK>

<style>

    @*START top-bar SECTION*@

    .top-bar {
        min-height: 170px;
    }
    .nav-list {
        display: inline-flex;
        text-align: center;
    }
    .nav-link img {
        display: inline;
        max-height: 120px;
        text-align: center;
    }
    .swapper img {
        max-height: 140px;
        padding-left: 200px;
    }

    @*END top-bar SECTION*@

    @*START heading SECTION*@

    .heading {
        text-align: center;
        padding-top: 100px;
        padding-bottom: 50px;
    }

    @*END heading SECTION*@

    @*START alphabet SECTION*@

    .alphabet-section ul {
        width: 100%;
        text-align: center;
        margin-bottom: 30px;
    }
    .alphabet-nav-item {
        display: inline-flex;
        text-align: center;
        padding: 10px;
    }
    .alphabet-nav-item a {
        color: #000;
        font-size: xx-large;
    }

    @*END alphabet SECTION*@

    @*START table SECTION*@

    .wrd {
        font-size: xx-large;
    }
    .def {
        font-size: larger;
    }
    .thead .def {
        font-size: xx-large;
    }
    .table .pro {
        padding-right: 50px;
    }
    .table {
        padding: 1rem 0.5rem;
    }
    .table > :not(caption) > * > * {
        padding: 2rem 0.5rem;
    }
        @*END table SECTION*@

</style>

<section class="top-bar">
    <ul class="nav-list">
        <li class="nav-element nav-link words">
            <a class="nav-icon" asp-area="" asp-controller="wordsUSA" asp-action="IndexA"><img src="/Images/CtPchatIcon.png" /></a>
            <a class="nav-option" asp-area="" asp-controller="WordsUSA" asp-action="IndexA">Words</a>
        </li>
        <li class="nav-link weather">
            <a class="nav-icon" asp-area="" asp-controller="WeatherForecast" asp-action="SearchByCity"><img src="/Images/CtPweatherIcon.png" /></a>
            <a class="nav-option" asp-area="" asp-controller="WeatherForecast" asp-action="SearchByCity">Weather</a>
        </li>
        <li class="nav-element nav-link temperature">
            <a class="nav-icon" asp-area="" asp-controller="Temp" asp-action="Index"><img src="/Images/CtPtemperatureIcon.png" /></a>
            <a class="nav-option" asp-area="" asp-controller="Temp" asp-action="Index">Temp.</a>
        </li>
        <li class="nav-element nav-link tipping">
            <a class="nav-icon" asp-area="" asp-controller="Tipping" asp-action="IndexUK"><img src="/Images/CtPtipsIcon.png" /></a>
            <a class="nav-option" asp-area="" asp-controller="Tipping" asp-action="IndexUK">Tipping</a>
        </li>
        <li class="nav-element nav-link swapper">
            <a class="nav-swapper" asp-area="" asp-controller="WordsUK" asp-action="IndexR"><img src="/Images/SwapperUStoUK.png" /></a>
        </li>
    </ul>
</section>

